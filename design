        '💕 中吉 💕<br>友達の紹介にチャンスあり。',
        '💗 小吉 💗<br>思わぬところで好印象をゲット。',
        '💔 凶 💔<br>噂話には注意して。'
    ],
    '1101': [
        '💖 大吉 💖<br>準備の努力が実を結ぶ！',
        '💕 中吉 💕<br>笑顔が幸運を呼びます。',
        '💗 小吉 💗<br>今日は感謝を伝えると良い日。',
        '💔 凶 💔<br>焦らずゆっくり行動して吉。'
    ]
};

const drawnOmikuji = new Set();

function showSchedule(key) {
    const d = document.getElementById('scheduleDisplay');
    const dd = document.getElementById('scheduleDate');
    const c = document.getElementById('scheduleContent');
    dd.textContent = scheduleData[key].date;
    c.innerHTML = scheduleData[key].content;
    d.classList.add('show');
}

function drawOmikuji(key) {
    if (!omikujiData[key]) return;
    if (drawnOmikuji.has(key)) return;
    const d = document.getElementById('scheduleDisplay');
    const dd = document.getElementById('scheduleDate');
    const c = document.getElementById('scheduleContent');
    const b = document.getElementById('omikuji' + key);
    const o = omikujiData[key];
    const r = Math.floor(Math.random() * o.length);
    dd.textContent = scheduleData[key].date + ' - 恋愛おみくじ';
    c.innerHTML = '<div class="change-item" style="border-left-color: #ff6b9d;">' + o[r] + '</div>';
    d.classList.add('show');
    drawnOmikuji.add(key);
    b.disabled = true;
    b.textContent = '引き済み';
}

function showAttention() {
    const d = document.getElementById('scheduleDisplay');
    const dd = document.getElementById('scheduleDate');
    const c = document.getElementById('scheduleContent');
    dd.textContent = '⚠️ ダメ。ゼッタイ。';
    c.innerHTML = '<div class="change-item" style="border-left-color: #ff9500;">8時20分に大甕駅に到着する下り電車に乗っている女生徒2人はマナーを守りましょう。</div>';
    d.classList.add('show');
}
</script>
